<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="emailConfig" extends="json-default" namespace="/emailConfig">
  
		<action name="emailConfig" 
            class="interviewActionConfig" 
            method="emailConfig">
            <result name="success">/emailConfig.jsp</result>
		</action>
		<action name="findEmailConfigs" 
            class="emailConfigAction" 
            method="findEmailConfigs">
            <result name="success">/emailConfig.jsp</result>
            <result name="json" type="json"></result> 
		</action>
      
		<action name="findUniqueEmailConfig" 
            class="emailConfigAction" 
            method="findUniqueEmailConfig">
            <result name="success">/emailConfig.jsp</result>
            <result name="json" type="json"></result> 
		</action>
      
		<action name="saveEmailConfig" 
            class="emailConfigAction" 
            method="saveEmailConfig">
            <result name="success">/emailConfig.jsp</result>
            <result name="json" type="json"></result> 
		</action>

		<action name="deleteEmailConfig" 
            class="emailConfigAction" 
            method="deleteEmailConfig">
            <result name="success">/emailConfig.jsp</result>
            <result name="json" type="json"></result> 
		</action>
		
   </package>
	
</struts>
